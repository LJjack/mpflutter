{
  "compilerOptions": {
    "module": "esnext",
    "target": "es6",
    "lib": ["es2015", "es2017", "dom"],
    "outDir": "dist",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": false,
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
